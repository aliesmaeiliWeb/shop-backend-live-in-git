generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  User
  Admin
  Shop
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  lastName  String
  password  String?
  avatar    String
  role      Role       @default(Admin)
  // for relation
  products  Product[]
  isActive  Boolean    @default(true)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  comments  Comment[]
  order     Order[]
  wishlist  WishList[]
  addresses Address[]
  cart      Cart?
}

model Attribute {
  id         Int        @id @default(autoincrement())
  name       String     @unique
  label      String
  type       String
  options    String?    @db.Text
  // categry many to many
  categories Category[]
}

model Category {
  id         Int         @id @default(autoincrement())
  name       String
  icon       String
  status     Boolean     @default(true)
  products   Product[]
  imageUrl   String?
  // category many to many
  attributes Attribute[]
}

model Product {
  id               Int       @id @default(autoincrement())
  name             String
  longDescription  String    @db.Text
  shortDescription String
  price            Float     @default(0)
  main_Image       String
  category         Category  @relation(fields: [categoryId], references: [id])
  categoryId       Int
  shop             User?     @relation(fields: [shopId], references: [id])
  shopId           Int?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime? @default(now()) @updatedAt

  comments  Comment[]

  wishlist WishList[]

  cartItem CartItem[]

  dynamicAttributes String? @db.Text

  skus ProductSKU[]
}

model ProductSKU {
  id         Int          @id @default(autoincrement())
  sku        String       @unique // unik code for product
  price      Float
  quantity   Int
  product    Product      @relation(fields: [productId], references: [id])
  productId  Int
  cartItem   CartItem[]
  orderItems orderItems[]
}

enum CommentStatus {
  PENDING
  APPROVED
  REJECTED
}

model Comment {
  id        Int     @id @default(autoincrement())
  text      String
  rating    Int
  authorId  Int
  author    User    @relation(fields: [authorId], references: [id], onDelete: Cascade)
  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  // وضعیت کامنت (برای تایید ادمین)
  status CommentStatus @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

//+ order section
enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  DELIVERED
  CANCELLED
  PROCESSING
  REFUNDED
}

model Order {
  id              Int      @id @default(autoincrement())
  totalPrice      Float
  shippingCost    Float       @default(0)
  taxAmount       Float       @default(0)
  subtotal        Float
  discountAmount  Float       @default(0)
  status          OrderStatus @default(PENDING)
  shippingAddress String      @db.Text
  customerName    String
  customerPhone   String
  customerEmail   String
  description     String?     @db.Text
  trackingCode    String?

  authorId Int
  autor    User         @relation(fields: [authorId], references: [id], onDelete: Restrict)
  items    orderItems[]
  payments Payment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model orderItems {
  id              Int    @id @default(autoincrement())
  quantity        Int
  productTitle    String?
  sku             String
  priceAtPurchase Float

  orderId Int
  order   Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  productSKUId Int
  productSKU   ProductSKU @relation(fields: [productSKUId], references: [id], onDelete: Restrict)
}

enum PaymentStatus {
  PENDING
  SUCCESSFUL
  FAILED
}

model Payment {
  id            Int           @id @default(autoincrement())
  amount        Float
  status        PaymentStatus @default(PENDING)
  gateway       String // نام درگاه پرداخت (مثلا Zarinpal)
  transactionId String?       @unique // کد تراکنش از سمت درگاه

  orderId Int
  order   Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

//+ product variant

model WishList {
  userId    Int
  productId Int

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@id([userId, productId]) // for no repead 
}

model Address {
  id         Int     @id @default(autoincrement())
  street     String
  province   String?
  country    String
  postalCode Int

  user   User @relation(fields: [userId], references: [id])
  userId Int
}

model Cart {
  id         Int        @id @default(autoincrement())
  userId     Int        @unique
  totalPrice Float
  cartItem   CartItem[]
  user       User       @relation(fields: [userId], references: [id])
}

model CartItem {
  id           Int        @id @default(autoincrement())
  cartId       Int
  price        Float
  quantity     Int        @default(1)
  productSKUId Int
  cart         Cart       @relation(fields: [cartId], references: [id], onDelete: Cascade)
  productSKU   ProductSKU @relation(fields: [productSKUId], references: [id])
  Product      Product?   @relation(fields: [productId], references: [id])
  productId    Int?

  @@unique([cartId, productSKUId])
}
