generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  User
  Admin
  Shop
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  lastName  String
  password  String?
  avatar    String
  role      Role       @default(Admin)
  // for relation
  products  Product[]
  isActive  Boolean    @default(true)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  comments  Comment[]
  order     Order[]
  wishlist  WishList[]
  addresses Address[]
  cart      Cart?
}

model Attribute {
  id         Int        @id @default(autoincrement())
  name       String     @unique
  label      String
  type       String
  options    String?    @db.Text
  // categry many to many
  categories Category[]
}

model Category {
  id         Int         @id @default(autoincrement())
  name       String
  icon       String
  status     Boolean     @default(true)
  products   Product[]
  imageUrl   String?
  // category many to many
  attributes Attribute[]
}

model Product {
  id               Int       @id @default(autoincrement())
  name             String
  longDescription  String    @db.Text
  shortDescription String
  quantity         Int
  price            Float     @default(0)
  main_Image       String
  category         Category  @relation(fields: [categoryId], references: [id])
  categoryId       Int
  shop             User?     @relation(fields: [shopId], references: [id])
  shopId           Int?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime? @default(now()) @updatedAt

  comments  Comment[]
  orderItem orderItems[]

  productVariants ProductVariant[]

  wishlist WishList[]

  cartItem CartItem[]

  dynamicAttributes String? @db.Text
}

enum CommentStatus {
  PENDING
  APPROVED
  REJECTED
}

model Comment {
  id        Int     @id @default(autoincrement())
  text      String
  rating    Int
  authorId  Int
  author    User    @relation(fields: [authorId], references: [id], onDelete: Cascade)
  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  // وضعیت کامنت (برای تایید ادمین)
  status CommentStatus @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

//+ order section
enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  DELIVERED
  CANCELLED
}

model Order {
  id              Int         @id @default(autoincrement())
  totalPrice      Float
  status          OrderStatus @default(PENDING)
  shippingAddress String
  customerName    String
  customerPhone   String
  customerEmail   String
  pinCode         String?

  paymentId String? @unique

  //+ user relation
  authorId Int
  author   User @relation(fields: [authorId], references: [id], onDelete: Restrict)

  //+ on order many itemse
  items orderItems[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model orderItems {
  id              Int     @id @default(autoincrement())
  quantity        Int // number of sell product
  productTitle    String
  priceAtPurchase Float
  orderId         Int
  order           Order   @relation(fields: [orderId], references: [id], onDelete: Restrict)
  productId       Int
  product         Product @relation(fields: [productId], references: [id], onDelete: Restrict)
}

//+ product variant
model ProductVariant {
  id        Int     @id @default(autoincrement())
  name      String
  product   Product @relation(fields: [productId], references: [id], onDelete: Restrict)
  productId Int

  productVariantItems ProductVariantItems[]
}

model ProductVariantItems {
  id             Int            @id @default(autoincrement())
  name           String
  productVariant ProductVariant @relation(fields: [variantId], references: [id], onDelete: Restrict)
  variantId      Int
}

model WishList {
  userId    Int
  productId Int

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@id([userId, productId]) // for no repead 
}

model Address {
  id         Int     @id @default(autoincrement())
  street     String
  province   String?
  country    String
  postalCode Int

  user   User @relation(fields: [userId], references: [id])
  userId Int
}

model Cart {
  id         Int        @id @default(autoincrement())
  userId     Int        @unique
  totalPrice Float
  cartItem   CartItem[]
  user       User       @relation(fields: [userId], references: [id])
}

model CartItem {
  id        Int     @id @default(autoincrement())
  productId Int
  cartId    Int
  variant   String? @db.Text
  price     Float
  quantity  Int     @default(1)

  product Product @relation(fields: [productId], references: [id])
  cart    Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
}
